{
  "name": "skip-local-postinstall",
  "description": "Skips postinstall when installed locally.",
  "version": "1.0.4",
  "repository": "github:tobua/skip-local-postinstall",
  "scripts": {
    "build": "padua build",
    "start": "padua watch"
  },
  "padua": {
    "source": true
  },
  "main": "./index.js",
  "source": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "padua": "^0.1.4"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
