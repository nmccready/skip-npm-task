{
  "name": "skip-local-postinstall",
  "description": "Skip postinstall on local npm installs.",
  "version": "2.0.1",
  "license": "MIT",
  "author": "Matthias Giger",
  "repository": "github:tobua/skip-local-postinstall",
  "scripts": {
    "build": "padua build",
    "start": "padua watch"
  },
  "padua": {
    "source": true
  },
  "type": "module",
  "main": "./index.js",
  "sideEffects": false,
  "bin": "./bin.js",
  "source": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "**/*.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "padua": "^0.3.4"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "engines": {
    "node": ">= 14"
  }
}
